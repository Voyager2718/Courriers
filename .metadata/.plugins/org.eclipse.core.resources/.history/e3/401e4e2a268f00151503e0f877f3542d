package city;

/**
 * A class that deal with an inhabitant's bank account.
 *
 */
public class BankAccount {
	protected int amount;

	public BankAccount() {
		this.amount = 0;
	}

	public BankAccount(int balance) {
		this.amount = balance;
	}

	public void credit(int credit) {
		this.amount += credit;
	}

	public void debit(int debit) {
		this.amount -= debit;
	}

	public int getBalance() {
		return this.amount;
	}
}
